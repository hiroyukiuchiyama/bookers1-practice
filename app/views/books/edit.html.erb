<h1>Editing Book</h1>

<%= form_with model: @book do |d| %>
  <%= render 'layouts/error_messages', book: @book %>

  <h4>Title</h4>
  <%= d.text_field :title,class:"book_title" %>

  <h4>Body</h4>
  <%= d.text_area :body,class:"book_body" %>
  <%= d.submit 'Update Book'%>
<% end %>
<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path %>