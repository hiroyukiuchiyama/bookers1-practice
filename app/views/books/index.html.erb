<main>
  <h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
     <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book),class:"show_#{book}" %></td>
        <td><%= link_to "Edit", edit_book_path(book),class: "edit_#{book}" %></td>
        <td><%= link_to "Destroy", book_path(book), class: "destroy_#{book}",  method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% end %>
  </tbody>
</table>

<h2>New Book</h2>

  <%= form_with model: @book do |b| %>



  <h4>Title</h4>
  <%= b.text_field :title, class:"book_title" %>

  <h4>Body</h4>
  <%= b.text_area :body, class:"book_ body" %>
  <%= b.submit 'Create Book' %>
  <% end %>
</main>